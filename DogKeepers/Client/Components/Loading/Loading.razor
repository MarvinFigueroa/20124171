@if (IsLoading)
{
    <div class="loading row">
        <div class="col-12 text-center">
            <div>
                <img src="Images/GoldenRetriever.svg"> 
            </div>
            <h5>
                Ladrando...
            </h5>
        </div>
    </div>
}else{
    @ChildContent
}

@code{
[Parameter] public bool IsLoading { get; set; }

[Parameter] public RenderFragment ChildContent { get; set; }

}