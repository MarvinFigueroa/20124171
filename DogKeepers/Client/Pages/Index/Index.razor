@page "/"
@using Shared.DTOs

<div class="container-fluid">
    <div class="banner row">
        <div class="banner-image"></div>
        <div class="overlay">
            <div class="text">
                Dales un hogar, adopta
            </div>
        </div>
    </div>
    <div class="suggestions">
        <div class="container">
            <h2 class="text-center font-weight-bold p-3 mb-3">
                Mascotas en adopción
            </h2>
            <Loading
                IsLoading="@IsLoadingDogSuggestions"
            >
            @if (DogList != null){   
                <div class="row">
                    @foreach (DogDto dog in DogList)
                    {
                    <div class="col-12 col-md-4">
                        <div class="card dog-card shadow">
                            <img src="Images/GoldenRetriever.svg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h4 class="card-title text-center">@dog.Name</h4>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <small>Edad:</small>
                                    <span>@dog.Age</span>
                                </li>
                                <li class="list-group-item">
                                    <small>Raza:</small>
                                    <span>@dog.Race.Name</span>
                                </li>
                                <li class="list-group-item">
                                    <small>Talla:</small>
                                    <span>@dog.Size.Name</span>
                                </li>
                            </ul>
                            <div class="card-body">
                                <a href="/Dog/@dog.Id" class="btn btn-llight">Más...</a>
                            </div>
                        </div>
                    </div>
                    }
                </div>
                    <div class="row mt-5">
                        <div class="col-12 text-center">
                            <a href="/dogs" class="btn btn-dark btn-lg text-light">
                                Ver más mascotas 
                            </a>
                        </div>
                    </div>
            }
            </Loading>
        </div>
    </div>
</div>