@page "/BreakingBad"

<div>
    <h1>Breaking Bad Quotes</h1>
</div>

<hr style="width:100%;text-align:left;margin-left:0">

<Loading
    IsLoading = "@IsLoading"
>
    <div class="container-fluid">
        <div class="row p-2 mb-4">
            <div class="col-12">
                @foreach (var Dato in @Datos)
                {
                    <h2>
                        @Dato.quote
                    </h2>
                    <span class="text-muted">
                        â€” @Dato.author
                    </span>
                }
            </div>
        </div>
    </div>
</Loading>

<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group mr-2" role="group" aria-label="First group">
        <button class="btn btn-primary" disabled="@disableDecreaseButton" @onclick="@GetPrevious">Previous</button>
    </div>
    <div class="btn-group mr-2" role="group" aria-label="Second group">
        <button class="btn btn-primary" disabled="@disableIncrementButton" @onclick="@GetQuote">Next</button>
    </div>
</div>

@code {
    public int currentCount = 1;

    private bool disableDecreaseButton => (currentCount == 1);

    private bool disableIncrementButton => (currentCount == 30);

}


